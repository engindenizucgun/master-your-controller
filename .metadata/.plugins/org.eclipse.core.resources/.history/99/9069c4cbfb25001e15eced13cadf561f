/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{
  /* USER CODE BEGIN 1 */
	RCC ->APB2ENR |= RCC_APB2ENR_SYSCFGEN;

	GPIO_Init();
	EXIT_Init();

	SysTick_Config(SystemCoreClock / 1000);
  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_USART2_UART_Init();
  MX_TIM2_Init();
  /* USER CODE BEGIN 2 */

  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
    /* USER CODE END WHILE */
	  if (!adjustmentMode) {

		  if (milliseconds >= 1000) {
			 milliseconds = 0;
			 seconds++;





			 PrintClockValue(hours, minutes, seconds);
		  }
	  } else {


		  if (milliseconds >= 20000) {
			  adjustmentMode = 0;

			  PrintClockValue(hours, minute, seconds);
		}
	 }
    /* USER CODE BEGIN 3 */
  }
  /* USER CODE END 3 */
}

void SysTick_Handler(void) {
	milliseconds++;
}

// GPIO initialization for buttons
void GPIO_Init(void) {
  // Enable GPIO clocks for the respective banks
  RCC->AHB2ENR |= RCC_AHB2ENR_GPIOAEN;  // Set button
  RCC->AHB2ENR |= RCC_AHB2ENR_GPIOBEN;  // Increase button
  RCC->AHB2ENR |= RCC_AHB2ENR_GPIOCEN;  // Decrease button

  // Configure set button pin as input with pull-up or pull-down resistor
  GPIOC->MODER &= ~(GPIO_MODER_MODE0);         // Clear mode bits for pin 0
  GPIOC->PUPDR &= ~(GPIO_PUPDR_PUPD0);         // Clear pull-up/pull-down bits for pin 0
  GPIOC->PUPDR |= GPIO_PUPDR_PUPD0_0;          // Set pull-down for pin 0

  // Configure increase button pin as input with pull-up or pull-down resistor
  GPIOC->MODER &= ~(GPIO_MODER_MODE5 << (1 * 2));  // Clear mode bits for pin 5
  GPIOC->PUPDR &= ~(GPIO_PUPDR_PUPD1 << (1 * 2));  // Clear pull-up/pull-down bits for pin 5
  GPIOC->PUPDR |= GPIO_PUPDR_PUPD1_1 << (1 * 2);   // Set pull-down for pin 5

  // Configure decrease button pin as input with pull-up or pull-down resistor
  GPIOC->MODER &= ~(GPIO_MODER_MODE2 << (2 * 2));  // Clear mode bits for pin 3
  GPIOC->PUPDR &= ~(GPIO_PUPDR_PUPD2 << (2 * 2));  // Clear pull-up/pull-down bits for pin 3
  GPIOC->PUPDR |= GPIO_PUPDR_PUPD2_2 << (2 * 2);   // Set pull-down for pin 3
}

void EXTI_Init(void) {
  // Configure EXTI for the set button
  // TODO: Replace BUTTON_SET_PIN_X with the appropriate pin number
  EXTI->IMR1 |= EXTI_IMR1_IM_X;   // Enable interrupt
  EXTI->RTSR1 |= EXTI_RTSR1_RT_X; // Enable rising edge trigger

  // Configure EXTI for the increase button
  // TODO: Replace BUTTON_INCREASE_PIN_X with the appropriate pin number
  EXTI->IMR1 |= EXTI_IMR1_IM_X;   // Enable interrupt
  EXTI->RTSR1 |= EXTI_RTSR1_RT_X; // Enable rising edge trigger

  // Configure EXTI for the decrease button
  // TODO: Replace BUTTON_DECREASE_PIN_X with the appropriate pin number
  EXTI->IMR1 |= EXTI_IMR1_IM_X;   // Enable interrupt
  EXTI->RTSR1 |= EXTI_RTSR1_RT_X; // Enable rising edge trigger

  // Enable EXTI interrupt in NVIC
  // TODO: Replace EXTI_X_IRQn with the appropriate EXTI interrupt number
  NVIC_EnableIRQ(EXTI_X_IRQn);
}
/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /** Configure the main internal regulator output voltage
  */
  if (HAL_PWREx_ControlVoltageScaling(PWR_REGULATOR_VOLTAGE_SCALE1) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSI;
  RCC_OscInitStruct.HSIState = RCC_HSI_ON;
  RCC_OscInitStruct.HSICalibrationValue = RCC_HSICALIBRATION_DEFAULT;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_NONE;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_HSI;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV1;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV1;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_0) != HAL_OK)
  {
    Error_Handler();
  }
}

